  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<% if logged_in? and current_user.admin? %>
  <body class="decreaseBodyWidith">
<% else %>
  <body>
<% end %>
  <%= render 'layouts/navigation' %>
  
