<h2 align="center">Title: <%= @ticket.title %></h2>

<div class="well col-xs-8 col-xs-offset-2">
  <% if @ticket.user %>
    <ul class="listing">
      <div class="row center">
        <div class="col-md-4 col-md-offset-4">
          <li>Created by:</li>
          <li class="article-title"><%= link_to @ticket.user.username, user_path(@ticket.user) %></li>
        </div>
      </div>
    </ul>
  <% end %>
  <h4 class="center description"><strong>Description:</strong></h4>
  <hr>
  <%= simple_format(@ticket.description) %>
    <% if logged_in? && current_user.admin? %>
      <div class="text-right">
          <%= link_to "Delete this ticket", ticket_path(@ticket), method: :delete,
          data: { confirm: "Are you sure you want to delete the ticket"},
          class: "btn btn-xs btn-danger" %>
      </div>
    <% end %>
</div>