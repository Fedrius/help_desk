<%= render 'shared/errors', obj: @ticket %>

<h1 class="text-center">Submit a ticket</h1>

<div class='row'>
  <div class='col-xs-12'>
    <%= form_for(@ticket, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      
      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-2">
          <label for="sel1">Ticket Type</label>
          <%= f.select(:issue_type, ['Request', 'Problem','Incident'], {include_blank: "Select"}, {:class => "form-control", :id => "sel1"}) %>
        </div>
      </div>
      
      <div class="form-group">
        <div class="col-sm-offset-3 col-sm-6">
          <%= f.text_field :title, class: "form-control", placeholder: "Title", autofocus: true %>
        </div>
      </div>

      <div class="form-group">

        <div class="col-sm-offset-3 col-sm-6">

          <%= f.text_area :description, rows: 8, class: "form-control", placeholder: "Description" %>

        </div>

      </div>

      <div class="form-group">

        <div class="col-sm-offset-3 col-sm-9">

          <%= f.submit "Submit", class: 'btn btn-primary btn-lg' %>

        </div>

      </div>

    <% end %>

    <div class="col-xs-4 col-xs-offset-5">

      [ <%= link_to "Cancel request", help_path %> ]

    </div>

  </div>

</div>

<button id='testingBtn'>test</button>