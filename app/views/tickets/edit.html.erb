<h2 align="center">Title: <%= @ticket.title %></h2>

<%= render 'ticket', obj: @ticket %>

<% if logged_in? && current_user.admin? %>
  <div class='row'>
    <div class='col-xs-12'>
      <%= form_for(@ticket, :html => {class: "form-horizontal", role: "form"}) do |f| %>
        <div class="form-group">
          <div class="col-sm-6 col-sm-offset-3">
            <h3>Response</h3>
            <%= f.text_area :response, rows: 6, class: "form-control", placeholder: "Response" %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-3 col-sm-8">
            <%= f.submit "Resolve Ticket", class: 'btn btn-primary btn-lg' %>
          </div>
        </div>
      <% end %>
      <div class="col-xs-4 col-xs-offset-5">
        [ <%= link_to "Return to Admin Help Desk", test_help_desk_path %> ]
      </div>
    </div>
  </div>
<% end %>