<%= render 'shared/errors', obj: @user %>

<div class='row'>
  <div class='col-xs-12'>
    <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-2 col-sm-offset-2">
          <%= f.label :username %>
        </div>
        <div class="col-sm-4">
          <%= f.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2 col-sm-offset-2">
          <%= f.label :email %>
        </div>

        <div class="col-sm-4">

          <%= f.email_field :email, class: "form-control", placeholder: "enter email" %>

        </div>

      </div>
      
      <div class="form-group">

        <div class="control-label col-sm-2 col-sm-offset-2">

          <%= f.label "New Password" %>

        </div>

        <div class="col-sm-4">

          <%= f.password_field :password, class: "form-control", placeholder: "enter password" %>

        </div>

      </div>

      <div class="form-group">

        <div class="col-sm-offset-4 col-sm-6">

          <%= f.submit(@user.new_record? ? "Sign up" : "Update account", class: 'btn btn-primary btn-lg') %>

        </div>

      </div>

    <% end %>

    <div class="col-xs-4 col-xs-offset-5">
      
      <% if @user.new_record? %>
      [ <%= link_to "Cancel", root_path %> ]
      <% else %>
      [ <%= link_to "Cancel and return to profile", user_path(@user) %> ]
      <% end %>
    </div>

  </div>

</div>